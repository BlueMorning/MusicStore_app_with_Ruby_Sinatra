<div>
  <div>
    <h1><%= @form_title %></h1>
  </div>
  <div>
        <form action="<%= @form_action %>" method="post">
          <div>
              <label for="alb_art_id">Artist</label>
              <select class="" name="alb_art_id" id="alb_art_id">
                  <option value="O">Artists</option>
                  <% @artists.each do |artist| %>
                    <option value="<%= artist.art_id %>"
                      <% if(@album.alb_art_id == artist.art_id) %>
                        selected
                      <% end %>
                    >
                    <%= artist.art_name %>
                  </option>
                  <% end %>
              </select>
          </div>
          <div>
              <label for="alb_gen_id">Genre</label>
              <select class="" name="alb_gen_id" id="alb_gen_id">
                  <option value="O">Genres</option>
                  <% @genres.each do |genre| %>
                    <option value="<%= genre.gen_id %>"
                      <% if (@album.alb_gen_id == genre.gen_id) %>
                        selected
                      <% end %>
                    >
                    <%= genre.gen_name %>
                  </option>
                  <% end %>
              </select>
          </div>
          <div>
              <label for="alb_title">Title</label>
              <input type="text" name="alb_title" id="alb_title" value="<%= @album.alb_title %>" maxlength="50" placeholder="Title"/>
          </div>
          <div>
              <label for="alb_qty_available">Quantity in stock</label>
              <input type="number" name="alb_qty_available" id="alb_qty_available" value="<%= @album.alb_qty_available %>" min="0" max="1000" step="1" placeholder="Quantity in stock"/>
          </div>
          <div>
              <label for="alb_qty_min">Min. Stock</label>
              <input type="number" name="alb_qty_min" id="alb_qty_min" value="<%= @album.alb_qty_min %>" min="0" max="1000" step="1" placeholder="Min. Stock"/>
          </div>
          <div>
              <label for="alb_qty_max">Max. Stock</label>
              <input type="number" name="alb_qty_max" id="alb_qty_max" value="<%= @album.alb_qty_max %>" min="0" max="1000" step="1" placeholder="Max. Stock"/>
          </div>
          <div>
              <label for="alb_price">Sale Price per unit</label>
              <input type="number" name="alb_price" id="alb_price" value="<%= @album.alb_price %>" min="0" max="1000" step="1" placeholder="Sale Price per unit"/>
          </div>
          <div>
            <input type="submit" value="<%= @form_submit_label %>" />
          </div>
        </form>
        <div>
          <image class="" src="<%= @album.alb_image_path %>" alt="<%= @album.alb_title %>">
        </div>
<div>
