<div class="sales-main">
  <!-- Sale Order Header -->
  <div class="flex-column">
    <div class="sales-header">
      <div class="sale-page-title-view">
        <h1>
            Sale Orders N°<span class="div-sale-number"><%= @sale_order.slo_id %></span>:</span>
            <span><%= @sale_order.customer.cus_name.capitalize() %>,</span>
            <span><%= @sale_order.slo_date %></span>
        </h1>
      </div>
      <div class="div-a-view-sales">
        <a href="<%= NavSaleOrders::GET_INDEX %>">Sale Orders list</a>
      </div>
    </div>
    <div class="flex-row-end">
      <div class="div-total-amount">
        <div class="flex-row">
          <div class="div-150">Nb Rows</div>
          <div class="div-100 div-number"><%= @sale_order.nb_items() %></div>
        </div>
        <div class="flex-row">
          <div class="div-150">Total Quantity</div>
          <div class="div-100 div-number"><%= @sale_order.total_quantity() %></div>
        </div>
        <div class="flex-row">
          <div class="div-150">NTotal Amount</div>
          <div class="div-100 div-number"><span>£<%= @sale_order.slo_total_price %></div>
        </div>
      </div>
    </div>
  </div>
  <!-- List of items -->
  <div class="div-table-purchases">
    <table class="table-purchases">
      <thead>
        <th>Cover</th>
        <th>Album</th>
        <th>Artist</th>
        <th>Genre</th>
        <th>Unit Sale Price</th>
        <th>Quantity</th>
        <th>Total Amount</th>
      </thead>
      <tbody>
        <% @sale_order.sale_items.each do |sale_item|  %>
          <tr>
            <td><image class="album-img-small" src="<%= sale_item.album.alb_image_path %>" alt="<%= sale_item.album.alb_title %>"></td>
            <td><%= sale_item.album.alb_title  %></td>
            <td><%= sale_item.artist.art_name %></td>
            <td><%= sale_item.genre.gen_name  %></td>
            <td class="td-number">£<%= sale_item.sli_unit_price %></td>
            <td class="td-number"><%= sale_item.sli_qty %></td>
            <td class="td-number">£<%= sale_item.sli_total_price %></td>
          </tr>
        <% end %>
       </tbody>
      </table>
    </div>
</div>
